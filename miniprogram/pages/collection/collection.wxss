/* pages/collection/collection.wxss */
.collection{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 20rpx;
}
.collection-item{
  display: flex;
  justify-content: left; 
  margin-bottom: 30rpx;
}
.collection-item>image{
  width: 360rpx;
  height: 360rpx;
}
.collection-item>.collection-right{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #666;
  font-weight: bold;
}
.collection-item>.collection-right>text{
  margin-bottom: 30rpx;
}
.collection-item>.collection-right>.collection-dianyming{
  font-size: 50rpx;
  width: 350rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  font-weight: bold;
}
.collection-item>.collection-right>.collection-yyuan{
  width: 330rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.collection>.collection-bottom{
  color: #ddd;
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-style: 30rpx;
}